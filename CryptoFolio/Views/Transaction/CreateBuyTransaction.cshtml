@model CryptoFolio.ViewModels.TransactionViewModel
@{
    ViewBag.Title = "CreateTransaction";
}
<div class="row">
    <div class="col-4"></div>
    <div class="col-4" style="text-align:center; border:5px solid white; padding:30px; border-radius:20px;">
        <h2>Create A Transaction</h2>
        <hr style="background-color: white;" />
        <div>
            <button class="btn btn-success" style="width:25%; margin:20px auto;">@Html.ActionLink("Buy", "CreateBuyTransaction", "Transaction", null, new { @style = "color:white;" })</button>
            <button class="btn btn-outline-danger" style="width:25%; margin:20px auto;">@Html.ActionLink("Sell", "CreateSellTransaction", "Transaction", null, new { @style = "color:white;" })</button>
        </div>
        @using (Html.BeginForm("CreateBuyTransaction", "Transaction"))
        {
            <div class="form-group">
                @Html.LabelFor(x => x.PortfolioID, "Portfolio")
                @Html.DropDownListFor(x => x.PortfolioID, new SelectList(Model.Portfolios, "PortfolioID", "Name"), "", new { @class = "form-control", style = "margin:0 auto;" })
            </div>
            <div class="form-group">
                @Html.LabelFor(x => x.CoinID, "Coin")
                @Html.DropDownListFor(x => x.CoinID, new SelectList(Model.Coins, "CoinID", "Name"), "", new { @class = "form-control", style = "margin:0 auto;" })
            </div>
            <div class="form-group">
                @Html.LabelFor(x => x.Quantity, "Quantity")
                @Html.TextBoxFor(x => x.Quantity, new { placeholder = "Quantity", @class = "form-control", style = "margin:0 auto;" })
            </div>
            <div class="form-group">
                @Html.LabelFor(x => x.DatePurchased, "Date Purchased")
                @Html.TextBoxFor(x => x.DatePurchased, new { type = "date", placeholder = "Date Purhcased", @class = "form-control", style = "margin:0 auto;" })
            </div>

            <button type="submit" style="width:50%; margin-top:10px;" class="btn btn-outline-success">Create</button>

        }
    </div>
    <div class="col-4"></div>
</div>
