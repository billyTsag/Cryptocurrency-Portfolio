@model CryptoFolio.ViewModels.PaymentViewModel
@{
    ViewBag.Title = "Payment";
}
<div class="row">
    <div class="col-4"></div>
    <div class="col-4" style="text-align:center; border:5px solid white; padding:30px; border-radius:20px; background-color:black;">
        <h2>Payment</h2>
        <hr style="background-color: white;" />

        <div class="form-group">
            <div class="form-group">
                @Html.LabelFor(x => x.Price, "$10.00")
                @Html.TextBoxFor(x => x.Price, new { placeholder = "$10.00", @class = "form-control", style = "margin:0 auto;" })
            </div>
            <div class="form-group">
                @Html.LabelFor(x => x.CardNumber, "Card No")
                @Html.TextBoxFor(x => x.CardNumber, new { placeholder = "Card No", @class = "form-control", style = "margin:0 auto;" })
            </div>
            <div class="form-group">
                <label>Month</label>
                <select class="form-control" style="margin:0 auto;">
                    <option value="Jan">01</option>
                    <option value="Feb">02</option>
                    <option value="Mar">03</option>
                    <option value="Apr">04</option>
                    <option value="May">05</option>
                    <option value="Jun">06</option>
                    <option value="Jul">07</option>
                    <option value="Aug">08</option>
                    <option value="Sep">09</option>
                    <option value="Oct">10</option>
                    <option value="Nov">11</option>
                    <option value="Dec">12</option>
                </select>
                <div class="form-group">
                    <label>Year</label>
                    <select class="form-control" style="margin:0 auto;">
                        <option value="2019">2019</option>
                        <option value="2020">2020</option>
                        <option value="2021">2021</option>
                        <option value="2022">2022</option>
                        <option value="2023">2023</option>
                        <option value="2024">2024</option>
                        <option value="2025">2025</option>
                        <option value="2026">2026</option>
                        <option value="2027">2027</option>
                    </select>
                </div>
                <div>
                    <label>CCV</label>
                    <input class="form-control" type="text" pattern="[\d]{3}" maxlength="3" required style="margin:0 auto;">
                </div>

                <div class="form-group">
                    <button class="btn btn-success" style="margin-top:1rem;"> @Html.ActionLink("Become PRO User", "ChangeRole", "Events", new { @style="color:white;"}) </button>
                </div>

            </div>
    </div>
    <div class="col-4"></div>
</div>
