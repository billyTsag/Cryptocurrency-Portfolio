@model CryptoFolio.Models.RegisterViewModel
@{
    ViewBag.Title = "Register";
}

<div class="row">
    <div class="col-4"></div>
    <div class="col-4" style="text-align:center; border:5px solid white; padding:30px; border-radius:20px; background-color:black;">
        @using (Html.BeginForm("Register", "Account", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
        {
            @Html.AntiForgeryToken()
            <h2 style="text-align:center;">@ViewBag.Title.</h2>

            <h4>Create a new account.</h4>
            <hr />
            @Html.ValidationSummary("", new { @class = "text-danger" })
            <div class="form-group">
                @Html.LabelFor(m => m.Email, new { })
                @Html.TextBoxFor(m => m.Email, new { @class = "form-control", style = "margin:0 auto;" })
            </div>
            <div class="form-group">
                @Html.LabelFor(m => m.UserName, new { })
                @Html.TextBoxFor(m => m.UserName, new { @class = "form-control", style = "margin:0 auto;" })
            </div>
            <div class="form-group">
                @Html.LabelFor(m => m.Password, new { })
                @Html.PasswordFor(m => m.Password, new { @class = "form-control", style = "margin:0 auto;" })
            </div>
            <div class="form-group">
                @Html.LabelFor(m => m.ConfirmPassword, new { })
                @Html.PasswordFor(m => m.ConfirmPassword, new { @class = "form-control", style = "margin:0 auto;" })

            </div>
            <div class="form-group">
                <input type="submit" class="btn btn-success" value="Register" />
            </div>
        }
    </div>
    <div class="col-4"></div>
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
