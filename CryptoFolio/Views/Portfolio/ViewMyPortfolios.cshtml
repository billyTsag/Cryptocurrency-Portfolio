@model IEnumerable<CryptoFolio.Models.Portfolio>
@{
    ViewBag.Title = "Home";
}


<table class="table table-striped table-hover table-dark" style="border: 1px solid white;">
    <thead>
        <tr>
            <th scope="col">#</th>
            <th>  @Html.ActionLink("Name", "ViewMyPortfolios",  new { sortOrder = ViewBag.NameSortParm })</th>
            <th>  @Html.ActionLink("Date", "ViewMyPortfolios", new { sortOrder = ViewBag.DateSortParm })</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
        <tr>
            <th scope="row">@item.PortfolioID</th>
            <td>@item.Name</td>
            <td>@item.DateCreated</td>
            <td><button class="btn btn-sm btn-secondary">@Html.ActionLink("View Transactions", "ViewMyTransactions", "Transaction", new { PortfolioID = item.PortfolioID}, new { @class = "nav-item nav-link", @style="color:white;"})</button></td>
            <td><button class="btn btn-sm btn-secondary">@Html.ActionLink("Edit", "EditMyPortfolio", "Portfolio", new { PortfolioID = item.PortfolioID }, new { @class = "nav-item nav-link", @style = "color:white;" })</button></td>
            <td><button class="btn btn-sm btn-secondary">@Html.ActionLink("Delete", "DeleteMyPortfolio", "Portfolio", new { PortfolioID = item.PortfolioID }, new { @class = "nav-item nav-link", @style = "color:white;" })</button></td>
        </tr>
        }
    </tbody>
</table>

<button class="btn btn-sm btn-secondary">@Html.ActionLink("Create New Portfolio", "CreatePortfolio", "Portfolio", null, new { @class = "nav-item nav-link" , @style="color:white;" })</button>

