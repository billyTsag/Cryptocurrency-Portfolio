@model List<CryptoFolio.ViewModels.MyTransactionsViewModel>
@{
    ViewBag.Title = "ViewMyPortfolio";
}

<h2>View My Portfolio</h2>
<table class="table table-striped table-hover table-dark">
    <thead>
        <tr>
            <th scope="col">Coin</th>
            <th scope="col">Name</th>
            <th scope="col">Price</th>
            <th scope="col">Quantity</th>
            <th scope="col">Value (USD)</th>
        </tr>
    </thead>
    <tbody>
        @for (int i = 0; i < Model.Count(); i++)
        {
            for (int j = 0; j < Model.Count(); j++)
            {
                if (Model[i].CoinID == Model[j].CoinID && Model[i].TransactionID != Model[j].TransactionID)
                {
                    <tr>
                        <th scope="row">@Model[i].CoinID</th>
                        <td>@Model[i].CoinName @Model[i].CoinName</td>
                        <td>@Model[i].CoinPrice</td>
                        <td>@Model[i].Quantity</td>
                        <td>@(Model[i].Quantity * Model[i].CoinPrice)</td>
                    </tr>
                }
                else if (Model[i].CoinID != Model[j].CoinID)
                {

                }
                else
                {
                    <tr>
                        <th scope="row">@Model[i].CoinID</th>
                        <td>@Model[i].CoinName</td>
                        <td>@Model[i].CoinPrice</td>
                        <td>@Model[i].Quantity</td>
                        <td>@(Model[i].Quantity * Model[i].CoinPrice)</td>
                    </tr>
                }
            }
        }

    </tbody>
</table>


