@using Microsoft.AspNet.Identity
@if (Request.IsAuthenticated)
{
    using (Html.BeginForm("LogOff", "Account", FormMethod.Post, new { id = "logoutForm", @class = "navbar-text" }))
    {
    @Html.AntiForgeryToken()

<div class="navbar-nav">
    <li class="dropdown" style="background-color:transparent">
        <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false">Welcome @User.Identity.GetUserName()!<span class="caret"></span></a>
        <ul class="dropdown-menu" style="background-color:transparent">
            <li><a href="@Url.Action("ViewMyPortfolios", "Portfolio")">My Portfolios</a></li>
            <li><a href="@Url.Action("ViewMyTransactions", "Transaction")">My Transactions</a></li>
            <li role="separator" class="divider"></li>
            <li><a class="nav-item nav-link" href="javascript:document.getElementById('logoutForm').submit()">Log off</a></li>
        </ul>
    </li>
</div>
    }
}
else
{
    @Html.ActionLink("Register", "Register", "Account", routeValues: null, htmlAttributes: new { id = "registerLink" ,@class = "nav-item nav-link"})
    @Html.ActionLink("Log in", "Login", "Account", routeValues: null, htmlAttributes: new { id = "loginLink" ,@class = "nav-item nav-link" })
    
}
