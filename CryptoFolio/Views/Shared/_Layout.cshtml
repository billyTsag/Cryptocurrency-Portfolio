<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - CryptoFolio</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")

</head>
<body  style="background: url('/Content/bg4.jpg') center; background-attachment: fixed; 	background-size:cover;">
    <nav class="navbar navbar-expand-lg navbar-dark bg-dark fixed-top">
        @Html.ActionLink("CryptoFolio", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })
        <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNavAltMarkup" aria-controls="navbarNavAltMarkup" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse" id="navbarNavAltMarkup">
            <div class="navbar-nav">
                @Html.ActionLink("Home", "Index", "Home", null, new { @class = "nav-item nav-link" })
                @Html.ActionLink("Create Your Portfolio", "CreatePortfolio", "Portfolio", null, new { @class = "nav-item nav-link" })
                @Html.ActionLink("Create A Transaction", "CreateBuyTransaction", "Transaction", null, new { @class = "nav-item nav-link" })
                @Html.ActionLink("Market", "ViewMarket", "Market", null, new { @class = "nav-item nav-link" })
                @Html.ActionLink("My Portfolios", "ViewMyPortfolios", "Portfolio", null, new { @class = "nav-item nav-link" })
                @Html.ActionLink("My Transactions", "ViewMyTransactions", "Transaction", null, new { @class = "nav-item nav-link" })
                @Html.ActionLink("Events", "GetEvents", "Events", null, new { @class = "nav-item nav-link" })
                @Html.ActionLink("Change role", "ChangeRole", "Events", null, new { @class="nav-item nav-link"})
            </div>
        </div>
        @Html.Partial("_LoginPartial")
    </nav>

    <div id="vw85" class="container-fluid">
        <div class="jumbotron bg-dark text-white">
            @RenderBody()
            <hr />
            <footer>
                <p>&copy; @DateTime.Now.Year - CryptoFolio</p>
            </footer>
        </div>
    </div>

        @Scripts.Render("~/bundles/jquery")
        @Scripts.Render("~/bundles/bootstrap")
        @RenderSection("scripts", required: false)
</body>
</html>
